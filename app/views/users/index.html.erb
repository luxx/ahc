<h1>All Users</h1>
<li>every player who created an account</li>

<table cellpadding="20">
  <thead>
    <tr>
      <th>Battletag</th>
      <th>Skype</th>
      <th>Favorite Deck</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.battletag, user %></td>
        <td><%= user.skype %></td>
        <td><%= user.deck %></td>
	<% if current_user.admin? && !current_user?(user) %>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>